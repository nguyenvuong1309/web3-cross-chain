{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "src",
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "entrypoint": ["src/"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/helpers/sendMessageSameChain/sendMessageSameChain.ts"
, "src/helpers/cross-chain-zkp/lock_phase_function.ts"  ],
  "exclude": ["node_modules"]
}
